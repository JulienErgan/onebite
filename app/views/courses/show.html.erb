<div class="banner-showpage" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/deyqjsowe/image/upload/v1590482198/code-coding-computer-data-574077_kghvqx.jpg );">

	<div class="navbar navbar-expand-sm navbar-light navbar-lewagon gray-background">
	  <%= link_to "OneBite", root_path, class: "onebite-home-orange"  %>

	  		<%= form_tag courses_path, class: "navbar-searchbar mx-3", method: :get do %>
			<div class="d-flex">
			  <%= text_field_tag :query,
			    params[:query],
			    class: "form-control banner-searchbar-round",
			    placeholder: "What would you like to learn?"
			  	%>
		  		<%= submit_tag "Search", class: "btn btn-primary banner-searchbar-roundbutton" %>
				<% end %>
			</div>

	  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
	    <span class="navbar-toggler-icon"></span>
	  </button>

	  <div class="collapse navbar-collapse" id="navbarSupportedContent">
	    <ul class="navbar-nav mr-auto">
	      <li class="nav-item active">
	        <%= link_to "A Link Here", "#", class: "nav-link navbar-link-text-orange" %>
	      </li>
	      <li class="nav-item">
	        <%= link_to "A Link Here", "#", class: "nav-link navbar-link-text-orange mx-3" %>
	      </li>
	      <li class="nav-item dropdown">
	        <%= image_tag "https://res.cloudinary.com/deyqjsowe/image/upload/v1590485005/default-avatar_snqmu9.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
	        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
	          <%= link_to "Action", "#", class: "dropdown-item" %>
	          <%= link_to "Another action", "#", class: "dropdown-item" %>
	        </div>
	      </li>
	    </ul>
	  </div>
	</div>

  <div class="container banner-text-container">
    <h1 class="banner-h1"><strong><%= @course.title %></strong></h1>
    <p class="banner-p"><%= @course.platform.name %></p>
    <!-- <a class="btn banner-enroll-roundbutton text-white" href="#">Enroll now</a>  -->
    <%= link_to "Enroll now", new_course_enrollment_path(@course), class: "btn banner-enroll-roundbutton text-white"  %>
  </div>
</div>

<div class="container my-3">
	<div class="show-info-section">
		<div class="show-info-left mx-3  rounded-box">
			<div>
				<h3 class="mb-3 course-font"><strong>What you'll learn.</strong></h3>
			</div>
		  <% @course.chapters.each do |chapter| %>
  			<p><%= chapter.name %></p>
			<% end %>
		</div>
		
		<div>
			<div class="show-info-right mx-3 rounded-box">
				<h3 class="course-font"><strong><%= @course.title %></strong></h3>
				<h6 class="platform-font"><%= @course.platform.name %></h6> 
				<h6><%= @course.description %></h6> 
			</div>
				<%= link_to 'Back to results', courses_path, class: "navbar-link-text-orange m-5 back-to-results" %>
			</div>
	</div>
</div>

