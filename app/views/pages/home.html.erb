<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/deyqjsowe/image/upload/v1590466125/OneBiteBannerPhoto_w6xtmb.jpg);">

	<div class="navbar navbar-onebite navbar-expand-sm navbar-light navbar-lewagon translucent-background">
	  <%= link_to "OneBite", root_path, class: "onebite-home"  %>

	  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
	    <span class="navbar-toggler-icon"></span>
	  </button>

	  <div class="collapse navbar-collapse" id="navbarSupportedContent">
	    <ul class="navbar-nav mr-auto">
	      <li class="nav-item active">
	        <%= link_to "Lessons", "#", class: "nav-link navbar-link-text" %>
	      </li>
	      <li class="nav-item">
	        <%= link_to "Profile", "#", class: "nav-link navbar-link-text mx-3" %>
	      </li>
	      <li class="nav-item dropdown">
	        <%= image_tag "https://res.cloudinary.com/deyqjsowe/image/upload/v1590485005/default-avatar_snqmu9.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
	        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
	          <%= link_to "Action", "#", class: "dropdown-item" %>
	          <%= link_to "Another action", "#", class: "dropdown-item" %>
	        </div>
	      </li>
	    </ul>
	  </div>
	</div>

  <div class="container">
    <h1 class="banner-h1"><strong>Learn. Grow. Thrive.</strong></h1>
    <p class="banner-p">Bite off more than you can chew. One bite at a time.</p>
		<%= form_tag courses_path, class: "banner-searchbar", method: :get do %>
			<div class="d-flex">
			  <%= text_field_tag :query,
			    params[:query],
			    class: "form-control banner-searchbar-round",
			    placeholder: "What would you like to learn?"
			  	%>
		  		<%= submit_tag "Search", class: "btn btn-primary banner-searchbar-roundbutton" %>
				<% end %>
			</div>  
  </div>
</div>

<div class="container mt-5">
	<div class="d-flex justify-content-around ">
		<i class="fas fa-search"></i>
		<i class="fas fa-calendar-alt"></i>
		<i class="fas fa-chart-line"></i>
	</div>
		<div class="d-flex justify-content-around mt-3 dark-grey-text-home">
			<h4 class="dark-grey-text-home font-weight-bold">search</h4>
			<h4 class="dark-grey-text-home  font-weight-bold">schedule</h4>
			<h4 class="dark-grey-text-home  font-weight-bold">track</h4>
	</div>
		<div class="d-flex justify-content-around">
			<h6 class="dark-grey-text-home">Quickly find the best courses.</h6>
			<h6 class="dark-grey-text-home">Schedule your lessons with ease.</h6>
			<h6 class="dark-grey-text-home">Monitor your progress and growth.</h6>
	</div>
</div>
