<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/deyqjsowe/image/upload/v1590466125/OneBiteBannerPhoto_w6xtmb.jpg);">

	<div class="navbar navbar-onebite navbar-expand-sm navbar-light navbar-lewagon translucent-background">
	  <%= link_to "OneBite", root_path, class: "onebite-home"  %>

	  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
	    <span class="navbar-toggler-icon"></span>
	  </button>

	  <div class="collapse navbar-collapse" id="navbarSupportedContent">
	    <ul class="navbar-nav mr-auto">
	      <li class="nav-item active">
            <a href="https://calendar.google.com/calendar/" class="nav-link navbar-link-text mx-3" target="_blank">Calendar</a>
	      </li>
	      <li class="nav-item">
	      	<% if current_user %>
	        <%= link_to "Profile", user_path(current_user), class: "nav-link navbar-link-text mx-3" %>
	      	<% else %>
  		        <%= link_to "Profile", "#", class: "nav-link navbar-link-text mx-3" %>
	      	<% end %>
	      </li>
	      <li class="nav-item dropdown">
	        <%= image_tag "https://res.cloudinary.com/deyqjsowe/image/upload/v1589709320/Yun_Chung_Profile_Photo_2_rlfgi5.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
	        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
	          <%= link_to "Help", "#", class: "dropdown-item" %>
	          <%= link_to "Log Out", "#", class: "dropdown-item" %>
	        </div>
	      </li>
	    </ul>
	  </div>
	</div>

  <div class="container">
    <h1 class="banner-h1"><strong>Learn. Grow. Thrive.</strong></h1>
    <p class="banner-p">Take courses on different e-learning platforms like Codecademy and Duolingo. Schedule your learning plans. Track your progress.</p>
		<%= form_tag courses_path, class: "banner-searchbar", method: :get do %>
			<div class="d-flex">
			  <%= text_field_tag :query,
			    params[:query],
			    class: "form-control banner-searchbar banner-searchbar-round search-position",
			    placeholder: "What would you like to learn?"
			  	%>
		  		<%= submit_tag "Search", class: "btn btn-primary banner-searchbar-roundbutton search-position" %>
				<% end %>
			</div>
  </div>
</div>

<div class="container mt-5 home-bottom">
	<div class="d-flex justify-content-around home-bottom">
		<i class="fas fa-search"></i>
		<i class="fas fa-calendar-alt"></i>
		<i class="fas fa-chart-line"></i>
	</div>
		<div class="d-flex justify-content-around mt-3 dark-grey-text-home home-bottom">
			<h4 class="dark-grey-text-home font-weight-bold">search</h4>
			<h4 class="dark-grey-text-home  font-weight-bold">schedule</h4>
			<h4 class="dark-grey-text-home  font-weight-bold">track</h4>
	</div>
		<div class="d-flex justify-content-around home-bottom">
			<h6 class="dark-grey-text-home">Quickly find the best courses.</h6>
			<h6 class="dark-grey-text-home">Schedule your lessons with ease.</h6>
			<h6 class="dark-grey-text-home">Monitor your progress and growth.</h6>
	</div>
</div>


<%= render "shared/footer" %>
