<!-- BEGINNING - search form to look for a friend  -->
  <!-- form taken from the lecture on Search  -->
  <%= form_tag users_path, method: :get do %>
    <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Find a friend" %>
    <%= submit_tag "Search", class: "unfollow-button" %>
  <% end %>
<!-- END - search form to look for a friend  -->



<!-- BEGINNING - the list of friends from the search in show.html.erb -->

<div class="container">
  <h1>Find your friends</h1>
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <div id="users">
        <% @users.each do |user| %>
          <div class="card-users-index">
            <div>
              <img class="avatar-users-index-bordered" alt="avatar-bordered" src="https://kitt.lewagon.com/placeholder/users/sarahlafer" />
            </div>
            <div class="card-users-index-infos">
              <h2><%= link_to user.name.capitalize.to_s, user_path(user) %></h2>
              <p><%= user.email %></p>
              <!-- test for Merit gem, badges and points -->
              <% user.badges.each do |badge| %>
                <p><<%= badge.name %></p>
              <% end %>
              <p><%= user.points %></p>
              <!-- test ends -->
            </div>
            <div class="card-users-index-buttons">
              <% if current_user.favorited?(user) %>
                <%= link_to "Unfollow", unfollow_user_path(user), class: "button-follow", method: :post, remote: true %>
              <% else %>
                <%= link_to "Follow", follow_user_path(user), class: "button-unfollow", method: :post, remote: true %>
              <% end %>
              <%# raise %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- END - the list of friends from the search in show.html.erb -->

