<div class="navbar navbar-expand-sm navbar-light navbar-lewagon gray-background">
  <%= link_to "OneBite", root_path, class: "onebite-home-orange"  %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a href="https://calendar.google.com/calendar/" class="nav-link navbar-link-text-orange" target="_blank">Calendar</a>
      </li>
      <li class="nav-item">
        <%= link_to "Profile", user_path(current_user), class: "nav-link navbar-link-text-orange mx-3" %>
      </li>
      <li class="nav-item dropdown">
        <%= image_tag "https://res.cloudinary.com/deyqjsowe/image/upload/v1590485005/default-avatar_snqmu9.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Help", "#", class: "dropdown-item" %>
          <%= link_to "Log Out", "#", class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>


<%= form_tag users_path, class: "navbar-searchbar mx-3", method: :get do %>
<div class="d-flex">
  <%= text_field_tag :query, params[:query], class: "form-control banner-searchbar-round", placeholder: "Find friends to follow" %>
  <%= submit_tag "Find Friends", class: "btn btn-primary banner-searchbar-roundbutton" %>
<% end %>
</div>

<div class="dashboard-container">
  <div class="new-dashboard-left">
    <div class="new-user-name-card">


        <div class="card-courses-users-index m-3">
          <div>
            <img class="mx-3 avatar-users-index-bordered-new" alt="avatar-bordered" src="https://kitt.lewagon.com/placeholder/users/sarahlafer" />
          </div>
          <div class="card-courses-index-infos justify-content-around results-info-left">
            <p class="dark-grey-font-p"><%= @user.name.capitalize %></p>
            <p class="index-card-description-user-font">Current Courses: <%= rand(100) %> blah blah blah</p>
          </div>
          <div class="mx-3">
            <% if current_user.id == @user.id %>
              <%= link_to "Edit profile", "#", class: "unfollow-button" %> <!-- edit_user_path(@user) -->
            <% elsif current_user.favorited?(@user) %>
              <%= link_to "Unfollow", unfollow_user_path(@user), class: "unfollow-button", method: :post, remote: true %>
            <% else %>
              <%= link_to "Follow", follow_user_path(@user), class: "follow-button", method: :post, remote: true %>
            <% end %>
            <%# raise %>
          </div>
        </div>


    </div>
  </div>
  <div class="new-dashboard-right">
    <p>testright</p>
  </div>
</div>
